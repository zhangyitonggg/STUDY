{
    "name": "vscode FTP测试",  //项目名称，任意
    "host": "",//服务器的ip
    "protocol": "ftp",      //ftp 或者sftp
    "port": 21,            //端口号,一般是21
	"username": "账号",
	"password":"你的密码",
    "remotePath": "/",//服务器目录
    "context": "",  //要上传的文件，可不选
	"uploadOnSave": true,   //保存时自动上传
    "connectTimeout": 1000,  //超时时间
	"watcher": {
		"files": "**/*",
		"autoUpload": true,              //是否自动上传
		"autoDelete": false              //是否自动删除
	}，
    "ignore": [    //不上传的文件
        ".vscode",
        ".git",
        ".DS_Store"
    ]
}